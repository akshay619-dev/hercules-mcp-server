# Hercules MCP Server Configuration

# Path to Hercules framework (with virtual environment)
HERCULES_PATH=your_path/testzeus-hercules

# Server configuration
PORT=3000
HOST=localhost

# Test cases and results directories (relative to mcp-server)
TEST_CASES_DIR=test-cases
RESULTS_DIR=results

# LLM Configuration (optional - can be overridden per test case)
DEFAULT_LLM_MODEL=gpt-4o
DEFAULT_LLM_API_KEY=

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

# Timeout settings (in milliseconds)
TEST_EXECUTION_TIMEOUT=60000
HEALTH_CHECK_TIMEOUT=5000