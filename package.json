{
  "name": "hercules-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Hercules test automation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/http-index.js",
    "dev": "ts-node --esm src/index.ts",
    "dev:http": "ts-node --esm src/http-index.ts",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
